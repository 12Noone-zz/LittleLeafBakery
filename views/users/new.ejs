	<img src="/images/cappucino.jpg" class="profile-img">
	<div class="signup-container">
		<h1>Sign Up</h1>
		<form action="/users" method="post" class="pure-form pure-form-aligned article-form">
			<div class="pure-control-group">
				<label>Username: </label>
				<input type="text" name="user[username]" placeholder="Username">
			</div>
			<div class="pure-control-group">
				<label>Password: </label>
				<input type="password" name="user[password]" placeholder="Password">
			</div>
			<div class="pure-control-group">
				<label>Profile pic</label>
				<input type="text" name="user[avatar]">
			</div>
			<div class="pure-control-group">
				<label>Bio</label>
				<textarea name="user[bio]"></textarea>
			</div>
			<div class="pure-control-group">
				<label>Age</label>
				<input type="number" name="user[age]">
			</div>
					
			<input type="submit" value="Sign Up!" class="LLB-btn">
</form>
</div>
</div>
