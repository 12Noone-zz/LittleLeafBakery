<div class="container">
	
<nav class="navbar">
	<ul>
		<li><a href="/users/login">Log In</a></li>
		<li><a href="/">Home</a></li>
	</ul>
</nav>
<form action="/users/<%=user._id%>/?_method=PATCH" method="post" class="pure-form pure-form-aligned article-form">
	<div class="pure-control-group">
		<label>Username: <%= user.username %> </label><br>
	</div>
	<div class="pure-control-group">
		<label>bio: <textarea name="user[bio]" rows="15" cols="30"><%= user.bio %></textarea><br>
		</label>
	</div>
	<div class="pure-control-group">
		<label>Profile photo:
		<input type="text" name="user[avatar]">
		</label>
	</div>
	<div class="pure-control-group">
		<label>
			age: <input type="text" name="user[age]" placeholder="<%= user.age%>"><br>
		</label>
	</div>
	<div class="pure-control-group">	
		<input type="submit" value="Update Profile" class="LLB-btn">
	</div>
</form>
</div>